{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/lib/*": ["src/lib/*"],
      "@/components/*": ["src/components/*"],
      "@/types/*": ["types/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "src/components/ClientLayout.tsx", "src/components/TeacherCalendar.tsx", "src/utils/dateUtils.jsx", "src/components/ui/button.jsx", "src/components/HomeworkLinkOverlay.tsx", "src/components/FeedbackOverlay.tsx", "src/components/StudentProfileOverlay.tsx", "src/components/TeacherProfileOverlay.tsx", "src/components/common/Button.tsx", "src/components/common/Container.jsx", "src/components/common/ErrorMessage.jsx", "src/components/Fields.tsx", "src/lib/LanguageSwitcher.jsx", "src/components/common/NavLink.jsx", "src/components/common/Logo.jsx", "src/components/StudentCalendar.tsx", "src/components/ui/card.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
